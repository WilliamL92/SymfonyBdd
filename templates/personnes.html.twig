{% extends "base.html.twig" %}

{# header #}
{% block stylesheets %}
{{ parent() }}
{% endblock %}

{# body #}
{% block body %}

{{ parent() }}

<div class="text-center">

<h1>Personnes</h1>
<hr>

<table class="table">
<thead>
<tr>
<th scope="col">Id:</th>
<th scope="col">Nom:</th>
<th scope="col">Prénom:</th>
</tr>
</thead>
<tbody>
{% for personne in pers %}
<tr>
<td scope="row">
{{ personne.id }}
</td>
<td scope="row">
{{ personne.nom }}
</td>
<td scope="row">
{{ personne.prenom }}
</td>
</tr>
{% endfor %}
</tbody>
</table>

<form method="post" action="{{ path("createPersonne") }}">

<div class="form-group">

<input type="text" placeholder="Nom" name="nom" required>
<input type="text" placeholder="Prénom" name="prenom" required>
<br>
<input class="btn btn-primary" type="submit" value="envoyer">

</div>

</form>

<h3>Vous pouvez aller à la page <a href="{{ path("articles") }}">articles</a> où aller à la page <a href="{{ path("home") }}">accueil</a></h3>

</div>

{% endblock %}